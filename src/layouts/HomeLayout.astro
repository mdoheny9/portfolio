<div class='parallax-container'>
  <div class='parallax-layer layer-01' data-speed = ".05" data-max-scroll = "565"></div>
  <div class='parallax-layer layer-02' data-speed = ".1" data-max-scroll = "565"></div>
  <div class='parallax-layer layer-03' data-speed = ".3" data-max-scroll = "565"></div>
  <div class='parallax-layer layer-04' data-speed = ".4" data-max-scroll = "565"></div>
  <div class='parallax-layer layer-05' data-speed = ".7" data-max-scroll = "565"></div>
  <div class='parallax-layer layer-06' data-speed = ".9" data-max-scroll = "565"></div>
  <div class='parallax-layer layer-07' data-speed = "1" data-max-scroll = "565"></div>
</div>

<style>
  .parallax-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
    pointer-events: none;
  }

  .parallax-layer {
    width: 100%;
    height: 150%;
    position: fixed;
    left: 0;
    top: 0;
    background-position: top center;
    background-repeat: no-repeat;
    background-size: 100% auto;
    will-change: transform;
  }
  .layer-01 { 
    top: 0; 
    z-index: 5;
    background-image: url("../../assets/backgrounds/Layer1.png");
  }
  .layer-02 { 
    top: 0;  
    z-index: 10; 
    background-image: url("../../assets/backgrounds/Layer2.png");
  }
  .layer-03 { 
    top: 0;  
    z-index: 15; 
    background-image: url("../../assets/backgrounds/Layer3.png");
  }
  .layer-04 { 
    top: 0;   
    z-index: 20; 
    background-image: url("../../assets/backgrounds/Layer4.png");
  }
  .layer-05 { 
    top: 0;  
    z-index: 25; 
    background-image: url("../../assets/backgrounds/Layer5.png"); 
  }
  .layer-06 { 
    top: 17rem;  
    z-index: 25; 
    background-image: url("../../assets/backgrounds/Layer6.png");
    }
</style>

<script>
  class ParallaxPart {
    constructor(el) {
      this.el = el;
      this.speed = parseFloat(el.getAttribute('data-speed'));
      this.maxScroll = parseInt(el.getAttribute('data-max-scroll'));
    }
    update(scrollY) {
      if (scrollY > this.maxScroll) return;
      const offset = -(scrollY * this.speed);
      this.el.style.transform = `translate3d(0, ${offset}px, 0)`;
    }
  }

  class ParallaxManager {
    constructor(selector) {
      this.parts = Array.from(document.querySelectorAll(selector)).map(el => new ParallaxPart(el));
      window.addEventListener("scroll", () => this.onScroll());
    }
    onScroll() {
      requestAnimationFrame(() => {
        const scrollY = Math.max(window.pageYOffset, 0);
        this.parts.forEach(part => part.update(scrollY));
      });
    }
  }

  new ParallaxManager('.parallax-layer');
</script>